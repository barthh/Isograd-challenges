#include <stdlib.h>
#include <stdio.h>
#include "string.h"
#include "libisograd.h"

int main() {

    int n;
    scanf("%d", &n)== 0 ;

    for(int i = 0; i < n ; i++)
    {
        for(int j = 0; j < n ; j++)
            if(i == j || i == n - j - 1) printf("#");
            else printf("-");
            
    	printf(" ");
	}

    return 0;
}
